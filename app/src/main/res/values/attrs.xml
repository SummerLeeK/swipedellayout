<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="BubbleLayout">

        <attr name="arrowdirection" format="enum">
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
            <enum name="left" value="4"></enum>
        </attr>

        <attr name="arrowposition" format="dimension"></attr>

        <attr name="radius" format="dimension"></attr>

        <attr name="arrowtype" format="enum">
            <enum name="triangle" value="0"></enum>
            <enum name="arc" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>